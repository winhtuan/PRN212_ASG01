<Window
    x:Class="FUMiniHotelSystem.AdminController.EditCustomerDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Edit Customer"
    Width="400"
    Height="420"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    WindowStyle="ToolWindow">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,20"
            FontSize="20"
            FontWeight="Bold"
            Text="Edit Customer" />

        <!--  Form Section  -->
        <StackPanel Grid.Row="1" VerticalAlignment="Top">
            <Label Content="Full Name" />
            <TextBox x:Name="FullNameBox" Margin="0,0,0,10" />

            <Label Content="Email" />
            <TextBox x:Name="EmailBox" Margin="0,0,0,10" />

            <Label Content="Phone" />
            <TextBox x:Name="PhoneBox" Margin="0,0,0,10" />

            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <Label Content="Birthday" />
                    <DatePicker x:Name="BirthdayPicker" />
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <Label Content="Status" />
                    <ComboBox x:Name="StatusBox">
                        <ComboBoxItem Content="Active" Tag="1" />
                        <ComboBoxItem Content="Deleted" Tag="2" />
                        <ComboBoxItem Content="Blocked" Tag="3" />
                    </ComboBox>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!--  Buttons  -->
        <StackPanel
            Grid.Row="2"
            Margin="0,20,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="80"
                Margin="0,0,10,0"
                Click="Cancel_Click"
                Content="Cancel" />
            <Button
                Width="80"
                Click="Save_Click"
                Content="Save" />
        </StackPanel>
    </Grid>
</Window>