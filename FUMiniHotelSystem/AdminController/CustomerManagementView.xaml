<UserControl
    x:Class="FUMiniHotelSystem.AdminController.CustomerManagementView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="700"
    mc:Ignorable="d">

    <UserControl.Resources>
        <!--  Search Button Style  -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#f8f9fa" />
            <Setter Property="Foreground" Value="#22223b" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Height" Value="44" />
            <Setter Property="MinWidth" Value="110" />
            <Setter Property="BorderBrush" Value="#bfc0c0" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Margin" Value="0,0,12,0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="22">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--  Add New Button Style  -->
        <Style x:Key="AddButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#457b9d" />
            <Setter Property="Foreground" Value="#fff" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Height" Value="44" />
            <Setter Property="MinWidth" Value="130" />
            <Setter Property="BorderBrush" Value="#457b9d" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="22">
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,6,0"
                                    FontSize="18"
                                    Text="➕" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontWeight="Bold"
                                    Text="Add New" />
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--  Edit Button Style  -->
        <Style x:Key="EditButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#e9c46a" />
            <Setter Property="Foreground" Value="#343a40" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="Height" Value="34" />
            <Setter Property="Width" Value="62" />
            <Setter Property="BorderBrush" Value="#e9c46a" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Margin" Value="0,0,8,0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="9">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--  Delete Button Style  -->
        <Style x:Key="DeleteButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#ef233c" />
            <Setter Property="Foreground" Value="#fff" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="Height" Value="34" />
            <Setter Property="Width" Value="74" />
            <Setter Property="BorderBrush" Value="#ef233c" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="9">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--  DataGrid Styles  -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#f8f9fa" />
            <Setter Property="RowBackground" Value="#fff" />
            <Setter Property="AlternatingRowBackground" Value="#f1f3f4" />
            <Setter Property="BorderBrush" Value="#bfc0c0" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="HorizontalGridLinesBrush" Value="#e0e1dd" />
            <Setter Property="VerticalGridLinesBrush" Value="#e0e1dd" />
            <Setter Property="ColumnHeaderHeight" Value="38" />
            <Setter Property="RowHeight" Value="36" />
        </Style>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#1d3557" />
            <Setter Property="Foreground" Value="#fff" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="BorderThickness" Value="0,0,1,1" />
        </Style>
    </UserControl.Resources>

    <Grid Margin="0,0,0,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="54" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--  Header (Row 0)  -->
        <StackPanel
            Grid.Row="0"
            Margin="0,4,0,8"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock
                Margin="0,0,10,0"
                FontSize="30"
                Text="👤" />
            <TextBlock
                VerticalAlignment="Center"
                FontSize="23"
                FontWeight="Bold"
                Foreground="#22223b"
                Text="Customer Management" />
        </StackPanel>

        <!--  Top action bar (Row 1)  -->
        <StackPanel
            Grid.Row="1"
            Height="46"
            Margin="0,0,0,14"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <!--  Search bar with border for rounded corners  -->
            <Border
                Height="44"
                Margin="0,0,14,0"
                VerticalAlignment="Center"
                Background="#fff"
                BorderBrush="#bfc0c0"
                BorderThickness="1"
                CornerRadius="22">
                <TextBox
                    Width="220"
                    Height="44"
                    Padding="18,0"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    FontSize="16"
                    Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
            </Border>

            <!--  Search Button  -->
            <Button
                Command="{Binding SearchCommand}"
                Content="Search"
                Style="{StaticResource RoundedButtonStyle}" />
            <!--  Add New Button  -->
            <Button
                Click="AddUser_Click"
                Content="Add New"
                Style="{StaticResource AddButtonStyle}" />
        </StackPanel>

        <!--  DataGrid: Customer list (Row 2)  -->
        <Border
            Grid.Row="2"
            BorderBrush="#bfc0c0"
            BorderThickness="1"
            CornerRadius="12">
            <DataGrid
                Margin="0,-1,0,0"
                AutoGenerateColumns="False"
                BorderThickness="0"
                CanUserAddRows="False"
                HeadersVisibility="Column"
                IsReadOnly="True"
                ItemsSource="{Binding Customers}"
                RowHeight="36"
                SelectedItem="{Binding SelectedCustomer, Mode=TwoWay}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="50"
                        Binding="{Binding CustomerID}"
                        Header="  ID" />
                    <DataGridTextColumn
                        Width="160"
                        Binding="{Binding CustomerFullName}"
                        Header="Full Name" />
                    <DataGridTextColumn
                        Width="120"
                        Binding="{Binding Telephone}"
                        Header="Phone" />
                    <DataGridTextColumn
                        Width="180"
                        Binding="{Binding EmailAddress}"
                        Header="Email" />
                    <DataGridTextColumn
                        Width="110"
                        Binding="{Binding CustomerBirthday, StringFormat=d}"
                        Header="Birthday" />
                    <DataGridTextColumn
                        Width="80"
                        Binding="{Binding CustomerStatusText}"
                        Header="Status" />
                    <DataGridTemplateColumn Width="180" Header="Actions">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button
                                        Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Content="Edit"
                                        Style="{StaticResource EditButtonStyle}" />

                                    <Button
                                        Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Content="Delete"
                                        Style="{StaticResource DeleteButtonStyle}" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>