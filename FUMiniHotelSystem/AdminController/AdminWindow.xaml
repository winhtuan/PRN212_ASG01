<Window
    x:Class="FUMiniHotelSystem.AdminController.AdminWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FUMiniHotelSystem.AdminController"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="FUMiniHotelSystem - Admin"
    Width="1150"
    Height="600"
    Background="#f8fafc"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <!--  Styles  -->
    <Window.Resources>
        <!--  Flat Menu Button Style  -->
        <Style x:Key="FlatMenuButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="#e0e1dd" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Height" Value="40" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Padding" Value="18,0,0,0" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Margin" Value="0,5,0,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="8"
                            SnapsToDevicePixels="True">
                            <ContentPresenter VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4a4e69" />
                                <Setter Property="Foreground" Value="#ffd166" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#9a8c98" />
                                <Setter Property="Foreground" Value="#fff" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Sidebar/Menu  -->
        <Border
            Grid.Column="0"
            Padding="0,20,0,20"
            Background="#22223b">
            <StackPanel VerticalAlignment="Stretch">
                <!--  Admin Avatar & Name  -->
                <StackPanel
                    Margin="0,30,0,20"
                    HorizontalAlignment="Center"
                    Orientation="Vertical">
                    <Ellipse
                        Width="64"
                        Height="64"
                        Fill="#4a4e69">
                        <Ellipse.Effect>
                            <DropShadowEffect
                                BlurRadius="5"
                                ShadowDepth="2"
                                Color="Black" />
                        </Ellipse.Effect>
                    </Ellipse>
                    <TextBlock
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        FontSize="17"
                        FontWeight="Bold"
                        Foreground="#fff"
                        Text="Admin" />
                </StackPanel>
                <!--  Menu Buttons  -->
                <Button
                    Margin="0,8,0,0"
                    Command="{Binding ShowCustomerManagementCommand}"
                    Content="👤   Quản lý khách hàng"
                    Style="{StaticResource FlatMenuButtonStyle}" />

                <Button
                    Margin="0,8,0,0"
                    Command="{Binding ShowRoomManagementCommand}"
                    Content="🏠   Quản lý phòng"
                    Style="{StaticResource FlatMenuButtonStyle}" />

                <Button
                    Margin="0,8,0,0"
                    Command="{Binding ShowReportCommand}"
                    Content="📊   Báo cáo thống kê"
                    Style="{StaticResource FlatMenuButtonStyle}" />

                <StackPanel Margin="0,30,0,0" VerticalAlignment="Bottom">
                    <Separator Margin="0,20,0,8" />

                    <Button
                        Width="139"
                        Height="32"
                        Margin="0,10,0,0"
                        Background="#fcad03"
                        Click="Logout_Click"
                        Content="Đăng xuất"
                        Foreground="#fff"
                        Style="{StaticResource FlatMenuButtonStyle}" />

                    <Button
                        Width="139"
                        Height="32"
                        Margin="0,10,0,0"
                        Background="#ef233c"
                        Click="Quit_Click"
                        Content="Thoát ứng dụng"
                        Foreground="#fff"
                        Style="{StaticResource FlatMenuButtonStyle}" />
                </StackPanel>
            </StackPanel>
        </Border>

        <!--  Nội dung động  -->
        <Border
            Grid.Column="1"
            Margin="24"
            Background="#fff"
            CornerRadius="14">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="8"
                    Opacity="0.5"
                    ShadowDepth="2"
                    Color="#888" />
            </Border.Effect>
            <ContentControl Content="{Binding CurrentView}" />
        </Border>
    </Grid>
</Window>