<UserControl
    x:Class="FUMiniHotelSystem.AdminController.ReportView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Filters & Buttons  -->
        <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
            <TextBlock
                Margin="0,0,6,0"
                VerticalAlignment="Center"
                Text="From:" />
            <DatePicker Width="120" SelectedDate="{Binding StartDate}" />
            <TextBlock
                Margin="10,0,6,0"
                VerticalAlignment="Center"
                Text="To:" />
            <DatePicker Width="120" SelectedDate="{Binding EndDate}" />
            <Button
                Margin="10,0,0,0"
                Padding="10,4"
                Command="{Binding GenerateReportCommand}"
                Content="View" />
            <Button
                Margin="10,0,0,0"
                Padding="10,4"
                Command="{Binding UpdateStatusCommand}"
                Content="Update Status" />
        </StackPanel>

        <!--  Report Table  -->
        <DataGrid
            Grid.Row="1"
            AutoGenerateColumns="False"
            HeadersVisibility="Column"
            IsReadOnly="True"
            ItemsSource="{Binding ReportResults}"
            RowHeight="32"
            SelectedItem="{Binding SelectedBooking, Mode=TwoWay}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="80"
                    Binding="{Binding BookingID}"
                    Header="Booking ID" />
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding CustomerID}"
                    Header="Customer ID" />
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding RoomNumber}"
                    Header="Room" />
                <DataGridTextColumn
                    Width="120"
                    Binding="{Binding CheckInDate, StringFormat=dd/MM/yyyy}"
                    Header="Check-In" />
                <DataGridTextColumn
                    Width="120"
                    Binding="{Binding CheckOutDate, StringFormat=dd/MM/yyyy}"
                    Header="Check-Out" />
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding BookingStatus}"
                    Header="Status" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
