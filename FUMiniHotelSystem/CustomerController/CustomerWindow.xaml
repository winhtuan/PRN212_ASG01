<Window
    x:Class="FUMiniHotelSystem.CustomerController.CustomerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Customer Dashboard"
    Width="900"
    Height="600"
    Background="#f8f9fa"
    Closed="Window_Closed"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header with Greeting, Search, and Profile  -->
        <DockPanel
            Grid.Row="0"
            Margin="0,0,0,10"
            LastChildFill="True">
            <!--  Greeting  -->
            <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                <TextBlock
                    Margin="0,0,10,0"
                    FontSize="30"
                    Text="👤" />
                <TextBlock
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="#1d3557"
                    Text="{Binding GreetingMessage}" />
            </StackPanel>

            <!--  Search + Profile Button  -->
            <StackPanel
                HorizontalAlignment="Right"
                DockPanel.Dock="Right"
                Orientation="Horizontal">
                <!--  Search Box  -->
                <TextBox
                    Width="200"
                    Height="36"
                    Margin="0,0,10,0"
                    Padding="8,0"
                    VerticalContentAlignment="Center"
                    FontSize="14"
                    Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                    ToolTip="Search by number, description, or type..." />

                <!--  Search Button  -->
                <Button
                    Width="80"
                    Height="36"
                    Margin="0,0,10,0"
                    Background="#1d3557"
                    BorderBrush="#1d3557"
                    Command="{Binding SearchCommand}"
                    Content="Search"
                    Cursor="Hand"
                    FontWeight="SemiBold"
                    Foreground="White" />

                <!--  Profile Button  -->
                <Button
                    Width="120"
                    Height="36"
                    Background="#2a9d8f"
                    Command="{Binding ViewProfileCommand}"
                    Content="View Profile"
                    Cursor="Hand"
                    FontWeight="SemiBold"
                    Foreground="White" />
            </StackPanel>
        </DockPanel>

        <!--  Tab Control  -->
        <TabControl Grid.Row="1" Background="White">
            <!--  Available Rooms Tab  -->
            <TabItem Header="Available Rooms">
                <Grid Margin="10">
                    <DataGrid
                        AutoGenerateColumns="False"
                        GridLinesVisibility="All"
                        HeadersVisibility="Column"
                        IsReadOnly="True"
                        ItemsSource="{Binding AvailableRooms}"
                        RowHeight="36"
                        SelectedItem="{Binding SelectedRoom}">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="60"
                                Binding="{Binding RoomID}"
                                Header="ID" />
                            <DataGridTextColumn
                                Width="100"
                                Binding="{Binding RoomNumber}"
                                Header="Number" />
                            <DataGridTextColumn
                                Width="200"
                                Binding="{Binding RoomDescription}"
                                Header="Description" />
                            <DataGridTextColumn
                                Width="80"
                                Binding="{Binding RoomMaxCapacity}"
                                Header="Capacity" />
                            <DataGridTextColumn
                                Width="90"
                                Binding="{Binding RoomPricePerDate}"
                                Header="Price" />
                            <DataGridTextColumn
                                Width="120"
                                Binding="{Binding RoomType.RoomTypeName}"
                                Header="Type" />

                            <DataGridTemplateColumn Width="100" Header="Action">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button
                                            Padding="6,2"
                                            Background="#457b9d"
                                            Command="{Binding DataContext.BookRoomCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Content="Book"
                                            Cursor="Hand"
                                            FontWeight="SemiBold"
                                            Foreground="White" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!--  My Bookings Tab  -->
            <TabItem Header="My Bookings">
                <Grid Margin="10">
                    <DataGrid
                        AutoGenerateColumns="False"
                        GridLinesVisibility="All"
                        HeadersVisibility="Column"
                        IsReadOnly="True"
                        ItemsSource="{Binding BookingHistory}"
                        RowHeight="36"
                        SelectedItem="{Binding SelectedBooking}">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="100"
                                Binding="{Binding BookingID}"
                                Header="Booking ID" />
                            <DataGridTextColumn
                                Width="120"
                                Binding="{Binding RoomNumber}"
                                Header="Room Number" />
                            <DataGridTextColumn
                                Width="140"
                                Binding="{Binding CheckInDate, StringFormat={}{0:dd/MM/yyyy}}"
                                Header="Check-In" />
                            <DataGridTextColumn
                                Width="140"
                                Binding="{Binding CheckOutDate, StringFormat={}{0:dd/MM/yyyy}}"
                                Header="Check-Out" />
                            <DataGridTextColumn
                                Width="120"
                                Binding="{Binding BookingStatus}"
                                Header="Status" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
