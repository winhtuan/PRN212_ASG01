<Window
    x:Class="FUMiniHotelSystem.CustomerController.BookingDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    Title="Book a Room"
    Width="400"
    Height="300"
    Background="#f8f9fa"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Room Number  -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock FontWeight="SemiBold" Text="Room Number" />
            <TextBox
                x:Name="RoomNumberBox"
                Height="30"
                Background="#e9ecef"
                FontSize="14"
                IsReadOnly="True" />
        </StackPanel>

        <!--  Check-In Date  -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock FontWeight="SemiBold" Text="Check-in Date" />
            <DatePicker
                x:Name="CheckInDatePicker"
                Height="30"
                SelectedDate="{x:Static sys:DateTime.Now}" />
        </StackPanel>

        <!--  Check-Out Date  -->
        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock FontWeight="SemiBold" Text="Check-out Date" />
            <DatePicker
                x:Name="CheckOutDatePicker"
                Height="30"
                SelectedDate="{x:Static sys:DateTime.Now}" />
        </StackPanel>

        <!--  Buttons  -->
        <StackPanel
            Grid.Row="3"
            Margin="0,20,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="80"
                Height="30"
                Margin="0,0,10,0"
                Background="#adb5bd"
                Click="Cancel_Click"
                Content="Cancel"
                Foreground="White" />
            <Button
                Width="80"
                Height="30"
                Background="#2a9d8f"
                Click="Confirm_Click"
                Content="Confirm"
                Foreground="White" />
        </StackPanel>
    </Grid>
</Window>
